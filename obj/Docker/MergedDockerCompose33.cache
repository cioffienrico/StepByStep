services:
  stepbystep.database:
    environment:
      POSTGRES_DB: StepByStep
      POSTGRES_PASSWORD: postgres
      POSTGRES_USER: postgres
    image: postgres:9.5
    networks:
      stepbystep-network: null
    ports:
    - mode: ingress
      target: 5432
      published: 5432
      protocol: tcp
    restart: always
    volumes:
    - type: volume
      source: pgdata
      target: /var/lib/postgresql/data
      volume: {}
  stepbystep.webapi:
    build:
      context: C:\Users\PC\Desktop\Visual Studio\Projetos\StepByStep
      dockerfile: StepByStep.Webapi/Dockerfile
    depends_on:
      stepbystep.database:
        condition: service_started
    environment:
      STEPBYSTEP_CONN: Host=stepbystep.database;Port=5432;Database=StepByStep;User
        Id=postgres;Password=postgres;
    image: stepbystepwebapi
    networks:
      stepbystep-network: null
    ports:
    - mode: ingress
      target: 80
      published: 8082
      protocol: tcp
networks:
  stepbystep-network:
    name: dockercompose11934771398908782014_stepbystep-network
volumes:
  pgdata:
    name: dockercompose11934771398908782014_pgdata